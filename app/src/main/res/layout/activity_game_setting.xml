                        android:textSize="@dimen/mainTextSize"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toStartOf="@+id/ivRemoveDoctors"
                        app:layout_constraintStart_toEndOf="@+id/ivAddDoctors"
                        app:layout_constraintTop_toTopOf="parent" />

                    <ImageView
                        android:id="@+id/ivRemoveDoctors"
                        android:layout_width="@dimen/buttonsAddRemoveSize"
                        android:layout_height="@dimen/buttonsAddRemoveSize"
                        android:layout_marginEnd="15dp"
                        android:background="@color/buttonBorderColor"
                        android:foreground="@drawable/ic_remove"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clManiacsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clDoctorsCount">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/clManiacIcon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/circle_for_icons"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/smallerCircularIconForegroundSize"
                        android:layout_height="@dimen/smallerCircularIconForegroundSize"
                        android:contentDescription="@string/icon"
