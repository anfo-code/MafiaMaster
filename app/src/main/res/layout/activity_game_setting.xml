                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/circle_for_icons"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/smallerCircularIconForegroundSize"
                        android:layout_height="@dimen/smallerCircularIconForegroundSize"
                        android:contentDescription="@string/icon"
                        android:foreground="@drawable/ic_don"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/donTextView"
                    android:layout_width="@dimen/roleNamesLengthInPixelsInGameSettingActivity"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textFromIconDistanceInGameSettingActivity"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_alternates_medium"
                    android:text="@string/don"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/secondaryTextSize"
                    app:layout_constraintStart_toEndOf="@+id/clDonIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutForChoosingDonsAmount"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/marginBetweenRoleNameAndRoleCount"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/donTextView"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
