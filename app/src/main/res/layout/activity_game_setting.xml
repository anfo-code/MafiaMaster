                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textFromIconDistanceInGameSettingActivity"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_alternates_medium"
                    android:text="@string/mistress"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/secondaryTextSize"
                    app:layout_constraintStart_toEndOf="@+id/clMistressIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutForChoosingMistressesAmount"
