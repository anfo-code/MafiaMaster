                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="25dp"
                    android:background="@drawable/circle_for_icons"
                    android:padding="10dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:layout_width="@dimen/smallerCircularIconForegroundSize"
                        android:layout_height="@dimen/smallerCircularIconForegroundSize"
                        android:contentDescription="@string/icon"
                        android:foreground="@drawable/ic_mafia"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>

                <TextView
                    android:id="@+id/mafiaTextView"
                    android:layout_width="@dimen/roleNamesLengthInPixelsInGameSettingActivity"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/textFromIconDistanceInGameSettingActivity"
                    android:layout_marginTop="4dp"
                    android:fontFamily="@font/montserrat_alternates_medium"
                    android:text="@string/mafia"
                    android:textColor="@color/mainTextColor"
                    android:textSize="@dimen/secondaryTextSize"
                    app:layout_constraintStart_toEndOf="@+id/clMafiaIcon"
                    app:layout_constraintTop_toTopOf="parent" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:id="@+id/constraintLayoutForChoosingAmount"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_marginStart="@dimen/marginBetweenRoleNameAndRoleCount"

                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/mafiaTextView"
                    app:layout_constraintTop_toTopOf="parent">


                    <TextView
                        android:id="@+id/tvMafiaCount"
                        android:layout_width="0dp"
                        android:layout_height="0dp"
                        android:layout_marginEnd="@dimen/marginForCountTextViewsWithoutButtonsInGameSettingActivity"
                        android:gravity="center"
                        android:text="1"

                        android:textColor="@color/mainTextColor"
                        android:textSize="@dimen/mainTextSize"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />
                </androidx.constraintlayout.widget.ConstraintLayout>


            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/clDonsCount"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingVertical="8dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/clMafiaCount">

                <androidx.constraintlayout.widget.ConstraintLayout
