<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/clMain"
    android:paddingVertical="8dp"
    >

    <TextView
        android:id="@+id/playersNumberTextView"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/textFromIconDistanceInGameSettingActivity"
        android:fontFamily="@font/montserrat_alternates_medium"
        android:text="Гравець 1"
        android:textColor="@color/mainTextColor"
        android:textSize="@dimen/textForRolesInGameSettingActivity"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/clChooseVotesAmount"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/marginBetweenRoleNameAndRoleCount"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/playersNumberTextView"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/ivAddVotesTextView"
            android:layout_width="@dimen/buttonsAddRemoveSize"
            android:layout_height="@dimen/buttonsAddRemoveSize"
            android:background="@color/buttonBorderColor"
            android:foreground="@drawable/ic_add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/chooseThePlayer"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="1"
            android:textColor="@color/mainTextColor"
            android:textSize="@dimen/mainTextSize"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@+id/ivRemoveVotes"
            app:layout_constraintStart_toEndOf="@+id/ivAddVotesTextView"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/ivRemoveVotes"
            android:layout_width="@dimen/buttonsAddRemoveSize"
            android:layout_height="@dimen/buttonsAddRemoveSize"
            android:layout_marginEnd="15dp"
            android:background="@color/buttonBorderColor"
            android:foreground="@drawable/ic_remove"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>